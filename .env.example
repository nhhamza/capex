# Backend API URL
VITE_BACKEND_URL=http://localhost:3001

# Stripe Checkout URLs (frontend routes for success/cancel)
VITE_CHECKOUT_SUCCESS_URL=http://localhost:5173/billing/success
VITE_CHECKOUT_CANCEL_URL=http://localhost:5173/billing/cancel

# Firebase Client Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
# IMPORTANT: These values are safe to commit (they're client-side keys)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Stripe Publishable Key (client-side)
# Get from https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
