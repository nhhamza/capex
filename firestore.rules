rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() { return request.auth != null; }
    function userDoc() { return get(/databases/$(database)/documents/users/$(request.auth.uid)); }
    function userOrg() { return userDoc().data.orgId; }
    function sameOrg(data) { return data.organizationId == userOrg(); }

    // user profile
    match /users/{uid} {
      allow read: if isAuthed() && uid == request.auth.uid;
      allow create: if isAuthed(); // created at signup
      allow update: if isAuthed() && uid == request.auth.uid;
    }

    // organizations
    match /organizations/{orgId} {
      allow read: if isAuthed() && userOrg() == orgId;
      allow create: if isAuthed();
      allow update, delete: if isAuthed() && userOrg() == orgId;
    }

    // app collections (must carry organizationId)
    match /properties/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /leases/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /recurringExpenses/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /oneOffExpenses/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /loans/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /rooms/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /propertyDocs/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }
    match /dealScenarios/{id} {
      allow read: if isAuthed() && sameOrg(resource.data);
      allow create: if isAuthed() && sameOrg(request.resource.data);
      allow update, delete: if isAuthed() && sameOrg(resource.data);
    }

    // Subscription plans (orgs collection)
    match /orgs/{orgId} {
      allow read: if isAuthed() && userOrg() == orgId;
      allow create: if false; // only backend can create
      allow update: if false; // only backend (Stripe webhooks) can update
      allow delete: if false; // only backend can delete
    }
  }
}
